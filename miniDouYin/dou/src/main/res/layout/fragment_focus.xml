<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161823"
    >

    <ImageView
        android:id="@+id/focus_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bac"
        android:textSize="60dp"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/focus_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focus_img"
        android:text="暂无关注人动态"
        android:layout_centerInParent="true"
        android:textSize="60px"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/focus_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focus_text1"
        android:text="查看通讯录好友，关注他们的抖音动态"
        android:layout_centerInParent="true"
        android:textSize="40px"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"/>

</RelativeLayout>
